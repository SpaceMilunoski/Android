<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.daniel.android.Ajustes"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/usuario"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imgUsuario"
            android:layout_marginRight="120dp"
            android:layout_alignBottom="@id/imgUsuario"
            app:srcCompat="@drawable/ic_edit_white_24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/etUsuario"
            android:layout_marginTop="30dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="@string/Usuario"/>
        <EditText
            android:id="@+id/etPassanterior"
            android:layout_below="@+id/etUsuario"
            android:layout_marginTop="10dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="Contraseña anterior"/>
        <EditText
            android:id="@+id/etPassnueva"
            android:layout_below="@+id/etPassanterior"
            android:layout_marginTop="10dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="Nueva cotraseña"/>
    </RelativeLayout>
</LinearLayout>
